@model Journey.Models.Comment

@{
    ViewBag.Title = "Editeaza comentariul";
}

<div class="row">
    <a href="javascript:void(0);" onclick="history.go(-1);" class="font-title-size" style="margin-left: 20px;"> <i class="glyphicon glyphicon-arrow-left"></i></a>
    <h2 class="text-center font-title-size page-title">@ViewBag.Title</h2>
</div>

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@TempData["message"]</h3>
}

<div class="text-center">
    @using (Html.BeginForm(actionName: "Edit", controllerName: "Comment", routeValues: new { id = Model.CommentId }))
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)

        <input type="text" class="input-text-custom" name="content" value="@Model.Content" />

        <button type="submit" class="btn btn-danger"> Editeaza </button>
    }
</div>