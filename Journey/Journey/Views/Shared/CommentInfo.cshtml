@model Journey.Models.Comment

<div class="panel">
    <div class="panel-heading article-heading">
        <span class="font-roboto article-title">@Model.Date</span>
    </div>

    <div class="panel-body">
        <br />
        <div class="article-content-wrapper">
            @Model.Content
        </div>

        @if (ViewBag.afisareButoane == true && Model.UserId == ViewBag.utilizatorCurent
                || ViewBag.esteAdmin)
        {
            <a href="/Comment/Edit/@Model.CommentId"> <span><i class="glyphicon glyphicon-edit"></i> </span> </a>
            using (Html.BeginForm(actionName: "Delete", controllerName: "Comment", method: FormMethod.Post, routeValues: new { id = @Model.CommentId }))
            {

                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-danger" type="submit"><i class="glyphicon glyphicon-remove"></i></button>

            }
        }
    </div>
    <div class="article-meta">
        <div>
            <i class="glyphicon glyphicon-user"></i>
            <strong> @Model.User.UserName </strong>
        </div>
    </div>

</div>