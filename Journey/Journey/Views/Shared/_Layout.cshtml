@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="/Home/Index" class="navbar-brand font-logo"> Journey </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                    <li>@Html.ActionLink("Categorii", "Index", "Category")</li>

                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Afisare utilizatori", "ShowUsers", "Account")</li>
                        <li>@Html.ActionLink("Cautare", "Search", "Post")</li>
                    }

                    @if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Albumele mele", "Index", "Album")</li>
                        <li> <a href="/Account/ShowProfile/@User.Identity.GetUserId()"> Profilul meu </a> </li>
                        <li>@Html.ActionLink("Cautare", "Search", "Post")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/load_image.js")
    <script src="https://cdn.scaleflex.it/plugins/filerobot-image-editor/3/filerobot-image-editor.min.js"></script>
    @Scripts.Render("~/Scripts/edit_image.js")
    @RenderSection("scripts", required: false)
</body>
</html>
