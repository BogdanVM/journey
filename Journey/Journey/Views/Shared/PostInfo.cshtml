@model Journey.Models.Post

<div class="panel-heading article-heading">
    <span class="font-roboto article-title">@Model.Description</span>
</div>

<div class="panel-body">
    <br />
    <div class="article-content-wrapper">
        <img src=@Url.Content("~/Images/" + Model.Photo) class="img-thumbnail img-size">
    </div>
</div>
<div class="article-meta">
    <span class="">
        <i class="glyphicon glyphicon-time"></i>
        @Model.Date
    </span>
    <div>
        <i class="glyphicon glyphicon-bookmark"></i>
        @Model.Category.CategoryName
    </div>
    <div>
        <i class="glyphicon glyphicon-user"></i>
        <strong> @Model.User.UserName </strong>
    </div>
</div>
