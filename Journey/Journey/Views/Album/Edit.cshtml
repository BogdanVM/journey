@model Journey.Models.Album

@{
    ViewBag.Titlu = "Modificare Album";
}

<h2>@ViewBag.Titlu</h2>

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@TempData["message"]</h3>
}

@using (Html.BeginForm(actionName: "Edit", controllerName: "Album"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <br />
    @Html.Label("Name", "Numele albumului")
    <br />
    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-sm btn-success" type="submit">Modifica album</button>
}