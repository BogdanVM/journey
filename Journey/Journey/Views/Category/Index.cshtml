
@{
    ViewBag.Title = "Lista categorii";
}

<h2>@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
}

@foreach (var category in ViewBag.Categories)
{
    <div class="container">
        @Html.Label("CategoryName", "Denumire categorie")
        <p>@category.CategoryName</p>
        <a class="btn btn-success" href="/Category/Show/@category.CategoryId">Afisare categorie</a>

        @if (ViewBag.esteAdmin)
        {
            <a class="btn btn-success" href="/Category/Edit/@category.CategoryId">Editare categorie</a>
        }
        <br />
        <hr />
        <br />

        <div>
            @foreach (Journey.Models.Post post in ViewBag.Posts[category.CategoryId])
            {
                <img src=@Url.Content("~/Images/" + post.Photo) class="img-size img-thumbnail" />
            }
        </div>
    </div>
}
<br />
@if (ViewBag.esteAdmin)
{
    <a class="btn btn-info" href="/Category/New">Adauga o noua categorie</a>
}
<br />
<br />
